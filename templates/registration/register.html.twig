{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
<div class="min-h-screen flex justify-center items-start p-6">

    <div class="w-fit flex flex-col gap-6 bg-gray-200 rounded-xl p-6">
        <h1 class="text-xl font-semibold ">Veuillez vous connecter</h1>
<div class="flex gap-6">

        <div class="space-y-4">

            {{ form_errors(registrationForm) }}

            {{ form_start(registrationForm) }}
                {{ form_row(registrationForm.email, {
                    attr: {class: 'block w-full p-2 border border-gray-300 rounded-md'},
                    label_attr: {class: 'block font-medium text-gray-700'}
                }) }}
                {{ form_row(registrationForm.ville, {
                    attr: {class: 'block w-full p-2 border border-gray-300 rounded-md'},
                    label_attr: {class: 'block font-medium text-gray-700'}
                }) }}
                {{ form_row(registrationForm.cp, {
                    attr: {class: 'block w-full p-2 border border-gray-300 rounded-md'},
                    label_attr: {class: 'block font-medium text-gray-700'}
                }) }}

                {{ form_row(registrationForm.type_client, {
                    attr: {class: 'block w-full p-2 border border-gray-300 rounded-md'},
                    label_attr: {class: 'block font-medium text-gray-700'}
                }) }}
                {{ form_row(registrationForm.adresse, {
                    attr: {class: 'block w-full p-2 border border-gray-300 rounded-md'},
                    label_attr: {class: 'block font-medium text-gray-700'}
                }) }}
            </div>

            <div class="space-y-4">

                {{ form_row(registrationForm.prenom, {
                    attr: {class: 'block w-full p-2 border border-gray-300 rounded-md'},
                    label_attr: {class: 'block font-medium text-gray-700'}
                }) }}

                {{ form_row(registrationForm.nom, {
                    attr: {class: 'block w-full p-2 border border-gray-300 rounded-md'},
                    label_attr: {class: 'block font-medium text-gray-700'}
                }) }}

                
                {{ form_row(registrationForm.plainPassword, {
                    label: 'Password',
                    attr: {class: 'block w-full p-2 border border-gray-300 rounded-md'},
                    label_attr: {class: 'block font-medium text-gray-700'}
                }) }}
                {{ form_row(registrationForm.agreeTerms, {
                    attr: {class: 'block w-full p-2 border border-gray-300 rounded-md'},
                    label_attr: {class: 'block font-medium text-gray-700'}
                }) }}

                <button type="submit" class="btn bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded">S'inscrire</button>
            {{ form_end(registrationForm) }}
        </div>
    </div>

    </div>
</div>

{% endblock %}
