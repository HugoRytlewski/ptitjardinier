{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<form method="post" class="w-96 mx-auto mt-8 p-6 bg-gray-200 rounded-md">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            Vous êtes connecté en tant que {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Déconnexion</a>
        </div>
    {% endif %}

    <h1 class="text-xl font-semibold mb-4">Veuillez vous connecter</h1>
    <label for="inputEmail" class="block mb-2">Email</label>
    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="w-full p-2 border border-gray-300 rounded-md mb-2" autocomplete="email" required autofocus>
    <label for="inputPassword" class="block mb-2">Mot de passe</label>
    <input type="password" name="password" id="inputPassword" class="w-full p-2 border border-gray-300 rounded-md mb-4" autocomplete="current-password" required>

    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

    <button class="btn bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded" type="submit">Connexion</button>
</form>
{% endblock %}
