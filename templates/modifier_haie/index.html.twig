{% extends 'base.html.twig' %}

{% block title %}Hello ModifierHaieController!{% endblock %}

{% block body %}

<div class="h-screen w-screen flex items-center justify-center bg-gray-100 p-4">
    <div class="overflow-x-auto shadow-md sm:rounded-lg">
        <table class="min-w-full text-sm text-left text-gray-500 dark:text-gray-400">
            <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
                <tr>
                    <th scope="col" class="px-6 py-3">Code</th>
                    <th scope="col" class="px-6 py-3">Nom</th>
                    <th scope="col" class="px-6 py-3">Prix</th>
                    <th scope="col" class="px-6 py-3">Categorie</th>
                    <th scope="col" class="px-6 py-3">Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for haie in mesHaies %}
                    <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700">
                        <td class="px-6 py-4">{{ haie.getCode() }}</td>
                        <td class="px-6 py-4">{{ haie.getNom() }}</td>
                        <td class="px-6 py-4">{{ haie.getPrix() }}</td>
                        <td class="px-6 py-4">{{ haie.getCategorie().getLibelle() }}</td>
                        <td class="px-6 py-4">
                            <a class="font-medium text-green-400 hover:underline" href="{{ path('app_haie_modifierUneHaie', { 'code': haie.getCode() }) }}">
                                Consultation/Modification
                            </a>
                        </td>
                    </tr>
                {% else %}
                    <tr class="bg-white">
                        <td colspan="5" class="px-6 py-4 text-center text-gray-500">Aucune haie trouv√©e.</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>

{% endblock %}
