{% extends 'base.html.twig' %}

{% block title %}Hello ModifierHaieController!{% endblock %}

{% block body %}

<div class="h-screen w-screen flex items-center justify-center bg-gray-100 p-4">
    <div class="overflow-x-auto shadow-md sm:rounded-lg">
        <table class="min-w-full text-sm text-left text-gray-500">
            <thead class="text-xs text-gray-700 uppercase bg-gray-50">
                <tr>
                    <th scope="col" class="px-6 py-3">No</th>
                    <th scope="col" class="px-6 py-3">Date</th>
                    <th scope="col" class="px-6 py-3">User</th>
                    <th scope="col" class="px-6 py-3">Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for devis in devis %}
                    <tr class="bg-white border-b ">
                        <td class="px-6 py-4">{{ devis.no }}</td>
                        <td class="px-6 py-4">{{ devis.date|date('Y-m-d H:i:s') }}</td>
                        <td class="px-6 py-4">{{ devis.user.nom }} {{ devis.user.prenom }}</td>
                        <td class="px-6 py-4">
                            <a class="font-medium text-green-400 hover:underline" href="{{ path('app_devis_delete', { 'id': devis.no }) }}">
                                Supprimer
                            </a>
                        </td>
                    </tr>
                {% else %}
                    <tr class="bg-white">
                        <td colspan="4" class="px-6 py-4 text-center text-gray-500">Aucun devis trouv√©.</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>

{% endblock %}
