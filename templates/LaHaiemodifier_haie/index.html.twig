{% extends 'base.html.twig' %}

{% block title %}Hello ModifierHaieController!{% endblock %}

{% block body %}


<div class="h-screen w-screen flex items-center justify-center bg-gray-100 p-4">
    


    <form action="{{ path('app_haie_modifLaHaie') }}" method="POST">
        <input type="hidden" name="codeModif" value="{{haie.getCode()}}">
        <div class="flex flex-col text-center gap-4 border-4 p-6 rounded border-green-700 w-96 p-2">
            <div>
                <label for="nom">Nom :</label>
                <input type="text" name="nom" id="nom" value="{{haie.getNom()}}">
            </div>
          <div>
            <label for="prix">Prix :</label>
                <input type="text" name="prix" id="prix" value="{{haie.getPrix()}}">
          </div>
            <div>
                <label for="code">Code :</label>
                <input type="text" name="code" id="code" value="{{haie.getCode()}}">
            </div>
            <input type="submit" value="Modifier" class="bg-green-700 text-white h-10 cursor-pointer hover:bg-green-600 duration-200">
        </div>
    
    </form>
    
</div>

{% endblock %}
